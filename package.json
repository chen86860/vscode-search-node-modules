{
  "name": "search-node-modules-quickly",
  "displayName": "Search Node Modules",
  "description": "Quickly search node_modules",
  "license": "MIT",
  "version": "1.0.6",
  "publisher": "chen86860",
  "main": "./build/extension.js",
  "files": [
    "build"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/chen86860/vscode-search-node-modules"
  },
  "scripts": {
    "start": "tsc -watch -p ./",
    "build": "rm -rf build && tsc -p ./",
    "vscode:prepublish": "yarn run build",
    "deploy": "vsce publish --yarn",
    "package": "vsce package --yarn",
    "prepare": "husky install"
  },
  "dependencies": {
    "glob": "^7.1.3"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.16",
    "@types/vscode": "^1.42.0",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.8.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "lint-staged": ">=10",
    "mocha": "^9.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5",
    "vsce": "^2.6.7"
  },
  "icon": "img/nodejs-logo.png",
  "engines": {
    "vscode": "^1.42.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.search"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.search",
        "title": "Search node_modules"
      }
    ],
    "keybindings": [
      {
        "command": "extension.search",
        "key": "ctrl+k ctrl+n",
        "mac": "cmd+k cmd+n",
        "when": "!terminalFocus"
      }
    ],
    "configuration": {
      "title": "Search node_modules",
      "properties": {
        "search-node-modules.useLastFolder": {
          "type": "boolean",
          "default": false,
          "description": "Default to folder of last opened file when searching."
        },
        "search-node-modules.path": {
          "type": "string",
          "default": "node_modules",
          "description": "Relative path to node_modules folder."
        },
        "search-node-modules.searchChildrenModules": {
          "type": "boolean",
          "default": true,
          "description": "Include modules from children folders in search results."
        },
        "search-node-modules.orderPriority": {
          "type": "array",
          "default": [
            "index.js",
            "README.md",
            "package.json"
          ],
          "description": "List of preferred names that should be shown at the top of the result list"
        }
      }
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
